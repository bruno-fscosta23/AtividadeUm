<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fish"
    android:orientation="vertical"
    tools:context=".Projeto_Peixe_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/peixe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:drawableLeft="@drawable/ic_person_peixe"
                android:hint=" Username"
                android:padding="9dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:drawableLeft="@drawable/ic_lock_peixe"
                android:hint=" Password"
                android:padding="9dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao_peixe"
                android:text="Signin"
                android:textSize="16sp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:layout_marginTop="34dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget password?"
                android:textSize="21sp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginTop="36dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>